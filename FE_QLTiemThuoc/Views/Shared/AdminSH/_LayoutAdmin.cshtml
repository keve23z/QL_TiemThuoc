﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <!-- CSS Theme -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/assets_admin/vendors/font-awesome/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets_admin/vendors/flat-icons/flaticon.css">
    <link rel="stylesheet" href="~/assets_admin/vendors/cryptocoins/cryptocoins.css">
    <link rel="stylesheet" href="~/assets_admin/vendors/cryptocoins/cryptocoins-colors.css">
    <link href="~/assets_admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets_admin/css/jquery-ui.min.css" rel="stylesheet">
    <link href="~/assets_admin/css/slick.css" rel="stylesheet">
    <link href="~/assets_admin/css/style.css" rel="stylesheet">
    <link href="~/assets_admin/css/morris.css" rel="stylesheet">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon.ico">
    <style>
        /* Override theme spacing when sidebar is collapsed */
        body.sidebar-collapsed #ms-side-nav {
            transform: translateX(-100%) !important;
            left: 0 !important;
        }

        /* Force content wrapper to use full width when collapsed, high specificity and !important to override theme */
        body.sidebar-collapsed .ms-content-wrapper,
        body.sidebar-collapsed main.body-content .ms-content-wrapper,
        body.sidebar-collapsed .page-body,
        body.sidebar-collapsed .content-area {
            margin-left: 0 !important;
            padding-left: 20px !important; /* small breathing space */
            width: 100% !important;
        }

        /* In case theme applies left margin to the main element */
        body.sidebar-collapsed main.body-content {
            margin-left: 0 !important;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body class="ms-body ms-aside-left-open ms-primary-theme ms-has-quickbar">

    <!-- Sidebar trái -->
    @* giữ nguyên phần <aside id="ms-side-nav"> ... </aside> từ file gốc *@
    @Html.Partial("AdminSH/_AdminSidebar")

    <!-- Sidebar phải -->
    @Html.Partial("AdminSH/_AdminRightSidebar")

    <!-- Nội dung chính -->
    <main class="body-content">
        <!-- Navbar -->
        @Html.Partial("AdminSH/_AdminNavbar")

        <!-- Nội dung trang con sẽ được render tại đây -->
        <div class="ms-content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- JS -->
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery UI CDN -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <!-- Slick + Main -->
    <script src="~/assets_admin/js/slick.min.js"></script>
    <!-- <script src="~/assets_admin/js/main.js"></script> -->



    @RenderSection("Scripts", required: false)
</body>
</html>