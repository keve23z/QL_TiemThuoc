@model FE_QLTiemThuoc.Models.KhachHangViewModel
@{
    ViewData["Title"] = "Thông Tin Khách Hàng";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container">
    <div class="logo">
        <i class="fas fa-user-md"></i>
        <h1>medion</h1>
    </div>

    <div class="header">
        <h2>Thông Tin Khách Hàng</h2>
        <p>Vui lòng hoàn tất thông tin của bạn để tiếp tục sử dụng dịch vụ</p>
    </div>

    <form asp-action="DangKyThongTin" method="post">
        <div class="form-group">
            <label class="form-label">Họ và tên<span class="required">*</span></label>
            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Ngày sinh<span class="required">*</span></label>
            <input asp-for="NgaySinh" type="date" class="form-control" />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Số điện thoại<span class="required">*</span></label>
            <input asp-for="DienThoai" class="form-control" placeholder="Ví dụ: 0912345678" />
            <span asp-validation-for="DienThoai" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Giới tính<span class="required">*</span></label>
            <div>
                <label><input type="radio" asp-for="GioiTinh" value="Nam" /> Nam</label>
                <label><input type="radio" asp-for="GioiTinh" value="Nữ" /> Nữ</label>
                <label><input type="radio" asp-for="GioiTinh" value="Khác" /> Khác</label>
            </div>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Địa chỉ<span class="required">*</span></label>
            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ của bạn" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Hoàn tất đăng ký</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
