@model FE_QLTiemThuoc.Models.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng Ký";
}

<link rel="stylesheet" href="~/assets_login/css/Style_DK.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container">
    <div class="info-box">
        <div class="info-content">
            <div class="badge">EASY HEALTH CARE</div>
            <h2>Chăm Sóc Sức Khỏe <span>Dễ Dàng</span> Cho Gia Đình Bạn</h2>
            <p>
                Cung cấp dịch vụ y tế và dược phẩm chất lượng cao với đội ngũ chuyên
                nghiệp, giao hàng nhanh chóng trong 30 phút.
            </p>
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="feature-text">
                    <h4>Giao hàng trong</h4>
                    <h3>30 phút</h3>
                </div>
            </div>
        </div>
        <div class="decoration-circle circle-1"></div>
        <div class="decoration-circle circle-2"></div>
        <div class="decoration-circle circle-3"></div>
    </div>

    <div class="register-box">
        <div class="logo">
            <i class="fas fa-user-md"></i>
            <h1>medion</h1>
        </div>

        <h2>Đăng Ký</h2>
        <p class="subtitle">Tạo tài khoản mới của bạn</p>

        <form asp-action="DangKy" method="post" class="register-form">
            <div class="input-group">
                <i class="fas fa-user"></i>
                <input asp-for="TenDangNhap" placeholder="Tên đăng nhập" />
            </div>
            <span asp-validation-for="TenDangNhap" class="error-message"></span>

            <div class="input-group">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" placeholder="Email của bạn" />
            </div>
            <span asp-validation-for="Email" class="error-message"></span>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input asp-for="MatKhau" type="password" placeholder="Mật khẩu (tối thiểu 6 ký tự)" />
            </div>
            <span asp-validation-for="MatKhau" class="error-message"></span>

            <div class="input-group">
                <i class="fas fa-lock"></i>
                <input asp-for="XacNhanMatKhau" type="password" placeholder="Xác nhận mật khẩu" />
            </div>
            <span asp-validation-for="XacNhanMatKhau" class="error-message"></span>

            <div class="form-options">
                <label class="terms-agree">
                    <input asp-for="DongYDieuKhoan" type="checkbox" />
                    <span>Tôi đồng ý với <a href="#">Điều khoản dịch vụ</a> và <a href="#">Chính sách bảo mật</a></span>
                </label>
            </div>
            <span asp-validation-for="DongYDieuKhoan" class="error-message"></span>

            <button type="submit" class="btn-register">
                <span>Đăng Ký</span>
                <i class="fas fa-arrow-right"></i>
            </button>

            <div class="divider">
                <span>Hoặc đăng ký với</span>
            </div>

            <div class="social-register">
                <button type="button" class="btn-social google">
                    <i class="fab fa-google"></i>
                    Google
                </button>
                <button type="button" class="btn-social facebook">
                    <i class="fab fa-facebook-f"></i>
                    Facebook
                </button>
            </div>

            <p class="login-link">
                Đã có tài khoản? <a asp-action="DangNhap">Đăng nhập ngay</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}